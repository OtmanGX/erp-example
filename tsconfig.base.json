{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "paths": {
      "@TanglassUi/management/*": ["./apps/ui/management/src/app/*"],
      "@TanglassCore/*": ["./libs/tanglass-core/src/*"],
      "@TanglassTheme/*": ["./libs/theme/tanglass-theme/src/*"],
      "@TanglassRouting/*": ["./apps/tanglass-routing/src/app/*"],
      "@TanglassStore/management/*": ["libs/store/managment/src/lib/*"],
      "@tanglass-erp/material": ["libs/theme/material/src/index.ts"],
      "@tanglass-erp/store/app": ["libs/store/app/src/index.ts"],
      "@tanglass-erp/ag-grid": ["libs/ag-grid/src/index.ts"],
      "@tanglass-erp/infrastructure/graphql": [
        "libs/infrastructure/graphql/src/index.ts"
      ],
      "@tanglass-erp/core/management": ["libs/core/management/src/index.ts"]
    },
    "baseUrl": ".",
    "rootDir": "."
  }
}
